# Fireflies API (for meeting transcripts)
# Get from: https://fireflies.ai/settings → API section
FIREFLIES_API_KEY=your_fireflies_api_key_here

# Anthropic Claude API (for task extraction)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Microsoft Planner Plan ID
# Get from: https://tasks.office.com/.../<PLAN_ID>/...
PLANNER_PLAN_ID=your_planner_plan_id_here

# Microsoft Teams Configuration
# Team name where tasks will be posted
TEAMS_TEAM_NAME=Your Team Name
# Channel name within the team
TEAMS_CHANNEL_NAME=ClickUp Task Orchestrator

# ClickUp Configuration
# Get from: ClickUp Settings → Apps → Generate API Token
CLICKUP_API_KEY=your_clickup_api_key_here
# Get from: ClickUp URL: https://app.clickup.com/.../list/<LIST_ID>
CLICKUP_LIST_ID=your_clickup_list_id_here
# Get from: ClickUp Settings → Workspaces
CLICKUP_TEAM_ID=your_clickup_team_id_here

# Webhook Server Port (optional, defaults to 3000)
WEBHOOK_PORT=3000
